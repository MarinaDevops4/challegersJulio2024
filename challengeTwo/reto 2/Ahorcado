
import java.util.Scanner;

public class Ahorcado{

    public static void main(String[] args){

        Scanner sc = new Scanner(System.in);

        char [] palabraOriginal = {'C', 'A', 'S', 'A'};
		char [] palabraAdivinar = {'C', 'A', 'S', 'A'};
		char [] palabraVista = {'*', '*', '*', '*'};
		char letra =0;
		
		int posicionesAcertadas=0;
		boolean haGanado = false;
		boolean haPerdido = false;
		boolean acierto = false;
		int fallo =0;
		
		do{
		do {
		for(int i=0; i<palabraAdivinar.length; i++) System.out.println(palabraVista[i]);
		
				System.out.println("Introduce una letra");
				letra = sc.next().charAt(0);
			
			
		
		for(int i=0; i<palabraAdivinar.length; i++) {
			if(palabraAdivinar[i]==letra) 
			{
				palabraVista[i] = letra;
				palabraAdivinar[i] = '*';
				acierto = true;
			}
				
		}

		if(acierto) {
			System.out.println("Letra acertada");
			if(posicionesAcertadas==palabraOriginal.length) haGanado = true;
			
		}
		else {
			System.out.println("Letra fallada");
			fallo++;
		}
		if (fallo ==10) haPerdido= true;
		
		
		}while(!haGanado && !haPerdido);
		
		
		if(haGanado) System.out.println("Ha ganado");
		
		else System.out.println("Ha perdido");
		for (int i=0; i<palabraAdivinar.length; i++) System.out.println( +palabraOriginal[i]+ ".");
	} while(!haGanado);
		
		sc.close();


    }


}